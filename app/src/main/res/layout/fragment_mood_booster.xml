<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg_purple_5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 1) Toolbar with back arrow + title -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMood"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Mood Booster"
            app:titleTextAppearance="@style/TextHeadline"/>

        <!-- 2) Header illustration -->

        <!-- 3) Section subtitle -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="254dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/img_mood_header" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remember 3 things in life"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="0dp"/>

        <!-- 4) Quote card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ProgramCard"
            app:cardBackgroundColor="#D9F7BE"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Experts now say that cheese should be stored on the counter rather than refrigerated."/>

                <TextView
                    style="@style/TextBodySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Experts also say woof woof."
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 5) Joke card #1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ProgramCard"
            app:cardBackgroundColor="#E0BBE4"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What do you call a deaf person that pissed you off?"/>

                <TextView
                    style="@style/TextBodySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Whatever you like."
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 6) Joke card #2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ProgramCard"
            app:cardBackgroundColor="#FFDFD3"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Why don’t eggs tell jokes?"/>

                <TextView
                    style="@style/TextBodySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="They’d crack each other up."
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
